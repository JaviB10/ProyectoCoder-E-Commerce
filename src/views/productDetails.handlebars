<div>
    <h1 id="userInfo" data-cid="{{user.cart._id}}">PRODUCT</h1>
    {{#each productFound}}
        <ul>
            <li>Title: {{this.title}}</li> 
            <li>Description: {{this.description}}</li>
            <li>Code: {{this.code}}</li>
            <li>Price: {{this.price}}</li>
            <li>Status: {{this.status}}</li>
            <li>Stock: {{this.stock}}</li>
            <li>Category: {{this.category}}</li>
            <li>Thumbnail: {{this.thumbnail}}</li>
            <li>Owner: {{this.owner}}</li>
            <li>ID: {{this._id}}</li>
        </ul>
        <button data-pid="{{this._id}}" id="btnAddProduct">Add to Cart</button>
        <button data-pid="{{this._id}}" id="btnDeleteProduct">Delete Product</button>
    {{/each}}
    
</div>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/productDetails.js"></script>

